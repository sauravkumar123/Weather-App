<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/imageview"
    android:src="@drawable/weatherimage1"
     android:foregroundGravity="center"
     android:scaleType="fitXY"
     >


 </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Enter a City!!"
        android:textSize="40dp"
        android:textColor="#FFFF00"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />
    <EditText
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textColor="#00FF00"
        android:textSize="35dp"
        android:paddingLeft="40dp"
        android:id="@+id/edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:textStyle="bold"
        ></EditText>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:onClick="getdata"
        android:text="Mausam Check Kre!!"
        android:textStyle="italic"
        android:textSize="20dp"
        android:id="@+id/button"
        ></Button>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature ->"
        android:maxLines="1"
        android:textSize="37dp"
        android:textColor="#FFA500"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="400dp"
        android:id="@+id/temp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Climate ->"
        android:maxLines="1"
        android:textSize="37dp"
        android:layout_below="@+id/temp"
        android:textColor="#FFA500"
        android:id="@+id/climate"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/temp"
        android:layout_marginTop="415dp"
        android:id="@+id/tempget"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/climate"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/tempget"
        android:id="@+id/climateget"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"

        ></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/climate"
        android:layout_marginTop="100dp"
        android:textSize="40dp"
        android:paddingLeft="70dp"
        android:id="@+id/date"
        android:textColor="#FFFF00"
        ></TextView>


</RelativeLayout>